@model List<ResultBannerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Banner Alanı </h4>
                        <p class="card-subtitle mb-4"> Anasayfanın Banner Alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>   
                                        <th>VideoUrl</th>   
                                        <th>Video Açıklama</th>                                          
                                        <th>Sil</th>
                                        <th>Güncelle</th>    
                                        <th>Vidoeyu İzle</th>                                         
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.title</td>
                                            <td>@item.description</td>   
                                            <td>@item.videoDescription</td>   
                                            <td>@item.videoUrl</td>                       
                                            <td><a href="/Admin/AdminBanner/RemoveBanner/@item.bannerID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminBanner/UpdateBanner/@item.bannerID"class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Admin/AdminBanner/UpdateBanner/@item.bannerID"class="btn btn-outline-dark">Youtube'da Aç</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-outline-primary">Yeni Banner Girişi</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->


        </div>

    </div>
</div>