@model UpdateBrandDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Marka Güncelleme</h4>
                        <p class="card-subtitle mb-4">Marka ile ilgili bilgileri eksiksiz doldurmanız önemlidir</p>
                        <form method="post">
                            <input asp-for="brandID" type="hidden" />
                            <div class="form-group">
                                <label for="exampleInputBrandName">İsim</label>
                                <input type="text" class="form-control" id="exampleInputBrandName" asp-for="name" placeholder="İsim Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Marka Kaydet</button>
                        </form>
                    </div> 
                </div> 
            </div>
        </div>
    </div>